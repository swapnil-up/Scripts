## Screenshots in clipboards
bindsym Ctrl+Print exec --no-startup-id sh -c 'maim --format=png --select Pictures/$(date +%Y-%m-%d_%H-%M-%S).png && xclip -selection clipboard -t image/png -i Pictures/$(ls -t Pictures | head -n 1)'

bindsym Ctrl+$mod+Print exec --no-startup-id maim --format=png --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym $mod+e exec --no-startup-id maim --format=png --select | xclip -selection clipboard -t image/png



