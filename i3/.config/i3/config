# Screen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5% && notify-send "Brightness Up" "$(brightnessctl | grep -oP '\(\K\d+%' | head -1)"
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%- && notify-send "Brightness Down" "$(brightnessctl | grep -oP '\(\K\d+%' | head -1)"
# Set brightness to bare minimum (e.g., 1%)
bindsym $mod+XF86MonBrightnessDown exec --no-startup-id brightnessctl set 1



